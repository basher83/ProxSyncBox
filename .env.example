# ProxSyncBox Configuration Example
# Copy this file to .env and fill in your actual values

# NetBox Configuration
NETBOX_URL=https://netbox.example.com
NETBOX_TOKEN=your_netbox_api_token_here
NETBOX_CLUSTER_TYPE_NAME=Proxmox VE

# Example Proxmox Node Configuration
# Replace EXAMPLE-NODE with a unique identifier for your node

# Node: example-node
PROXMOX_NODE_EXAMPLE-NODE_ID_NAME=example-node
PROXMOX_NODE_EXAMPLE-NODE_HOST=192.168.1.10
PROXMOX_NODE_EXAMPLE-NODE_NODE_NAME=pve
PROXMOX_NODE_EXAMPLE-NODE_USER=root@pam
PROXMOX_NODE_EXAMPLE-NODE_TOKEN_NAME=netbox_sync_token
PROXMOX_NODE_EXAMPLE-NODE_TOKEN_SECRET=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
PROXMOX_NODE_EXAMPLE-NODE_NETBOX_CLUSTER_NAME=ProxmoxCluster
PROXMOX_NODE_EXAMPLE-NODE_NETBOX_NODE_SITE_NAME=Main-Datacenter
PROXMOX_NODE_EXAMPLE-NODE_NETBOX_NODE_DEVICE_ROLE_NAME=Hypervisor
PROXMOX_NODE_EXAMPLE-NODE_NETBOX_NODE_MANUFACTURER_NAME=Dell
PROXMOX_NODE_EXAMPLE-NODE_NETBOX_NODE_DEVICE_TYPE_NAME=PowerEdge R740
PROXMOX_NODE_EXAMPLE-NODE_NETBOX_NODE_PLATFORM_NAME=
PROXMOX_NODE_EXAMPLE-NODE_VERIFY_SSL=false

# Add more nodes by duplicating the above section with different ID_NAME values